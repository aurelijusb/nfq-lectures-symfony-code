{% extends 'base.html.twig' %}

{% block title %}Super home page{% endblock %}

{% block body %}
    {% if advertisement.content|trim == 'symfony' %}
        Hello, you may be interested in NFQ Academy
    {% elseif not advertisement.content %}
        Hello, maybe you want to log in?
    {% else %}
        Hello, happy to see you here
        {% if app.environment == 'dev'  %}
            <pre>{{ dump(advertisement) }}</pre>
        {% endif %}
    {% endif %}

    {% block nfq_academy %}{% endblock %}

    {% block navigation %}{{ navigation|raw }}{% endblock %}
{% endblock %}
